function getVideoKey($url)
{
	$start=strpos($url, 'v=');
	$key=substr($url, $start+2);
	return $key;
}

function cutString($str,$limit)
{
	if (strlen($str)>$limit)
	{
		while ($str[$limit]!=' ' && $limit<strlen($str)-1)
			$limit++;
	}
	else $limit=strlen($str);
	return substr($str, 0, $limit);
}?>
